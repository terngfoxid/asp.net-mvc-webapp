@model WebAppTest.Models.User
@{
    ViewData["Title"] = "Login with Template Editor";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
        <div class="col-sm-10 col-md-8 col-lg-6 p-3 px-5 rounded-3 shadow-lg">
            @Html.EditorFor(model => model)
        </div>
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
        <div class="d-flex justify-content-center mt-4">
            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home page</a>
        </div>
    </div>
</div>