@model WebAppTest.Models.Banner[]
@{
    ViewData["Title"] = "Picture";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            @{
                if (TempData["PictureID"] == null)
                {
                    <div class="row g-2">
                        @{
                            if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <a class="col-6 col-sm-4" asp-area="" asp-controller="Home" asp-action="Picture" asp-route-id="@item.ID"><img src="@item.Path" class="rounded w-100" alt="..."></a>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <h3>Picture ID: @TempData["PictureID"]</h3>
                    <div class="row g-2">
                        <div class="p-4 shadow-lg mt-3 rounded-3 mb-2">
                            <div class="d-flex justify-content-center"><img src="@Model[0].Path" height="300" alt="@Model[0].Title" asp-append-version="true" /></div>
                            <h4 class="mt-3">@Html.DisplayFor(model => model[0].Title)</h4>
                            <p class="mt-2">@Html.DisplayFor(model => model[0].Description)</p>
                        </div>
                        <div class="w-100 row g-1 my-2">
                            @foreach (var item in Model[0].SubPictures)
                            {
                                <div class="col-6 col-sm-4">
                                    <img class="img-fluid d-block" src="@item.Path" alt="Sub Picture" asp-append-version="true" />
                                </div>

                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Picture" asp-route-id="">Back to All Picture</a>
                    </div>
                }
            }
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>