@model WebAppTest.Models.Article[]
@{
    ViewData["Title"] = "Article";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            @{
                if (TempData["ArticleID"] == null)
                {
                    <div class="row">
                        @{
                            if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <a class="w-100 rounded-3 shadow-sm overflow-hidden p-0 mb-2 text-decoration-none text-dark" asp-area="" asp-controller="Home" asp-action="Article" asp-route-id="@item.ID">
                                        <div class="w-100 p-2 bg-secondary bg-gradient bg-opacity-25">
                                            <h4 class="px-2">@Html.DisplayFor(modelItem => item.Subject)</h4>
                                            <p class="text-secondary px-3">@Html.DisplayFor(modelItem => item.Time)</p>
                                            <p class="px-3 text-truncate">@Html.DisplayFor(modelItem => item.Body)</p>
                                        </div>
                                    </a>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <h3>Article ID: @TempData["ArticleID"]</h3>
                    <div class="row g-2">

                        <div class="p-4 shadow-lg mt-3 rounded-3">
                            <h4>@Html.DisplayFor(model => model[0].Subject)</h4>
                            <p class="mt-2 text-secondary">@Html.DisplayFor(model => model[0].Time)</p>
                            <p class="mt-2">@Html.DisplayFor(model => model[0].Body)</p>
                        </div>
                        
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Article" asp-route-id="">Back to All Article</a>
                    </div>
                }
            }
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>