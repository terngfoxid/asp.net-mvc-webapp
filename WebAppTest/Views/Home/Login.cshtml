@model WebAppTest.Models.User
@{
    ViewData["Title"] = "Login";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
        <div class="col-sm-10 col-md-8 col-lg-6 p-3 px-5 rounded-3 shadow-lg">
            <form class="form-horizontal" asp-action="Login">
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input asp-for="UserName" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group mt-2 d-flex justify-content-center">
                    <input class="py-2 px-3 btn btn-dark" type="submit" value="Login" />
                </div>
            </form>
        </div>
        <div class="col-sm-1 col-md-2 col-lg-3"></div>
        <div class="d-flex justify-content-center mt-4">
            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home page</a>
        </div>
    </div>
</div>

@{
    if (TempData["msg"] != null)
    {
        if (TempData["msg"].Equals("Login Completed"))
        {
            <script>
                alert('@TempData["msg"]')
                window.location = "/backend"
            </script>
        }
        else
        {
            <script>
                alert('@TempData["msg"]')

            </script>
        }
    }
}