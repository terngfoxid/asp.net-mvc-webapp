@model WebAppTest.Models.Article
@{
    ViewData["Title"] = "Article Delete";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">

            <div class="row">
                <h4 class="text-danger">Delete Article ID: @TempData["ArticleManagerID"]</h4>
                <form class="" asp-action="ArticleDelete">
                    
                    <div class="p-4 shadow-lg mt-3 rounded-3">
                        <h4>@Html.DisplayFor(model => model.Subject)</h4>
                        <p class="mt-2 text-secondary">@Html.DisplayFor(model => model.Time)</p>
                        <p class="mt-2">@Html.DisplayFor(model => model.Body)</p>
                    </div>

                    <div class="form-group mt-2 d-flex justify-content-center">
                        <input class="py-2 px-3 btn btn-danger" type="submit" value="Delete this article" />
                    </div>

                </form>

            </div>

            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="ArticleManager">Back to All Article Manager</a>
                <a class="btn btn-secondary mx-4" asp-area="" asp-controller="Backend" asp-action="ArticleManager" asp-route-id="@Model.ID">Back to this Article View</a>
            </div>

        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

@{
    if (TempData["ArticleDelete"] != null)
    {
        if (TempData["ArticleDelete"].Equals("Delete article success"))
        {
            <script>
                alert('@TempData["ArticleDelete"]')
                window.location = "/backend/articlemanager"
            </script>
        }
        else
        {
            <script>
                alert('@TempData["ArticleDelete"]')

            </script>
        }


    }
}