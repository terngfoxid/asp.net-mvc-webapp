@model WebAppTest.Models.Banner
@{
    ViewData["Title"] = "Banner Delete";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">

            <div class="row">
                <h4 class="text-danger">Delete Banner ID: @TempData["BannerManagerID"]</h4>
                <form class="" asp-action="BannerDelete">
                    
                    <div class="p-4 shadow-lg mt-3 rounded-3">
                        <div class="d-flex justify-content-center"><img src="@Model.Path" height="300" alt="@Model.Title" asp-append-version="true" /></div>
                        <h4 class="mt-3">@Html.DisplayFor(model => model.Title)</h4>
                        <p class="mt-2">@Html.DisplayFor(model => model.Description)</p>
                    </div>

                    <div class="form-group mt-2 d-flex justify-content-center">
                        <input class="py-2 px-3 btn btn-danger" type="submit" value="Delete this banner" />
                    </div>

                    <div class="mt-2">
                        <h5 class="text-danger text-center">All sub pictures will be remove from DB record</h5>
                    </div>
                    <div class="w-100 row g-1 my-2">
                        @if(Model.SubPictures != null){
                            @foreach (var item in Model.SubPictures)
                            {
                            <div class="col-6 col-sm-4">
                                <img class="img-fluid d-block" src="@item.Path" alt="Sub Picture" asp-append-version="true" />
                            </div>

                            }
                        }
                    </div>

                </form>

            </div>

            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="PictureManager">Back to All Banner Manager</a>
                <a class="btn btn-secondary mx-4" asp-area="" asp-controller="Backend" asp-action="PictureManager" asp-route-id="@Model.ID">Back to this Banner View</a>
            </div>

        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

@{
    if (TempData["BannerDelete"] != null)
    {
        if (TempData["BannerDelete"].Equals("Delete banner success"))
        {
            <script>
                alert('@TempData["BannerDelete"]')
                window.location = "/backend/picturemanager"
            </script>
        }
        else
        {
            <script>
                alert('@TempData["BannerDelete"]')

            </script>
        }


    }
}