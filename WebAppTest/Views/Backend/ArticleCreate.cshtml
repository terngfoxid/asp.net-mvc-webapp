@model WebAppTest.Models.Article
@{
    ViewData["Title"] = "Article Creator";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            
            <div class="row">
                <h4>New Article</h4>
                <form class="" asp-action="ArticleCreate">
                    <div class="form-group">
                        <label class="control-label">Article Subject</label>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                        <input asp-for="Subject" class="form-control" type="text" placeholder="Subject" />
                        
                    </div>
                    <div class="form-group">
                        <label class="control-label">Article Body</label>
                        <span asp-validation-for="Body" class="text-danger"></span>
                        <textarea class="form-control" rows="7" asp-for="Body" type="text" placeholder="Write somethings...">
                        </textarea>
                    </div>
                    <div class="form-group mt-2 d-flex justify-content-center">
                        <input class="py-2 px-3 btn btn-dark" type="submit" value="Create new article" />
                    </div>
                </form>

            </div>

            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="ArticleManager">Back to Article Manager</a>
            </div>

        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

@{
    if (TempData["ArticleCreate"] != null)
    {
        if (TempData["ArticleCreate"].Equals("Create Article Completed"))
        {
            <script>
                alert('@TempData["ArticleCreate"]')
                window.location = "/backend/articlemanager"
            </script>
        }
        else
        {
            <script>
                alert('@TempData["ArticleCreate"]')

            </script>
        }


    }
}