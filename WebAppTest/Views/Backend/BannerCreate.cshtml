@model WebAppTest.Models.BannerCreate
@{
    ViewData["Title"] = "Banner Creator";
}

<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            
            <div class="row">
                <h4>New Banner</h4>
                @using (Html.BeginForm("BannerCreate", "Backend", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label class="control-label">Upload Image</label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <input class="form-control mt-2" type="file"  asp-for="Image"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Title</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <input asp-for="Title" class="form-control" type="text" placeholder="Title.." />

                    </div>
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <textarea class="form-control" rows="3" asp-for="Description" type="text" placeholder="Write somethings...">
                            </textarea>
                    </div>
                    <div class="form-group mt-2 d-flex justify-content-center">
                        <input class="py-2 px-3 btn btn-dark" type="submit" value="Create new banner" />
                    </div>

                    
                }
            </div>

            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="PictureManager">Back to Picture Manager</a>
            </div>

        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

@{
    if (TempData["BannerCreate"] != null)
    {
        if (TempData["BannerCreate"].Equals("Create Banner Completed"))
        {
            <script>
                alert('@TempData["BannerCreate"]')
                window.location = "/backend/picturemanager"
            </script>
        }
        else
        {
            <script>
                alert('@TempData["BannerCreate"]')

            </script>
        }


    }
}