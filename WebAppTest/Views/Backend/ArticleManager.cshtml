@model WebAppTest.Models.Article[]
@{
    ViewData["Title"] = "Article Manager";
}
<h1 class="mb-2 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            @{
                if (TempData["ArticleManagerID"] == null)
                {
                    <div class="d-flex justify-content-between">
                        <h4>All Article</h4>
                        <a class="btn btn-dark" asp-area="" asp-controller="Backend" asp-action="ArticleCreate">
                            <i class="bi-plus-circle-fill"></i>
                            New Article
                        </a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Subject)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                    @if (Model != null)
                        {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                        @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td>
                                    <a asp-action="ArticleEdit" asp-route-id="@item.ID"><i class="bi-pencil-square text-warning"></i></a> |
                                    <a asp-action="ArticleManager" asp-route-id="@item.ID"><i class="bi-file-text-fill text-primary"></i></a> |
                                    <a asp-action="ArticleDelete" asp-route-id="@item.ID"><i class="bi-trash-fill text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-center mt-4">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="Index">Back to Backend Home</a>
                    </div>
                }
                else
                {

                    <div class="d-flex justify-content-between">
                        <h4>Article ID: @TempData["ArticleManagerID"]</h4>
                        <div class="d-flex">
                            <a class="btn btn-warning mx-2" asp-area="" asp-controller="Backend" asp-action="ArticleEdit" asp-route-id="@TempData["ArticleManagerID"]">
                                <i class="bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-danger" asp-area="" asp-controller="Backend" asp-action="ArticleDelete" asp-route-id="@TempData["ArticleManagerID"]">
                                <i class="bi-trash-fill"></i>
                                Delete
                            </a>
                        </div>
                    </div>

                    <div class="p-4 shadow-lg mt-3 rounded-3">
                        <h4>@Html.DisplayFor(model => model[0].Subject)</h4>
                        <p class="mt-2 text-secondary">@Html.DisplayFor(model => model[0].Time)</p>
                        <p class="mt-2">@Html.DisplayFor(model => model[0].Body)</p>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Backend" asp-action="ArticleManager" asp-route-id="">Back to All Article</a>
                    </div>
                }
            }
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>